<%- include('includes/header.ejs') %>
  </head>
  <body class="d-flex flex-column h-100">
    <%- include('includes/navigation.ejs') %>

    <main class="flex-shrink-0">
      <div class="container">
        <div class="row align-items-center g-lg-5 py-5">
          <div class="col-md-10 mx-auto col-lg-5">
            <form
              class="p-4 p-md-5 border rounded-3 bg-light"
              action="/login"
              method="POST"
            >
              <% if (errorMessage){ %>

              <span
                id="invalidEmailOrPassword"
                class="custom-invalid"
                ><%= errorMessage %></span
              >

              <% } %>
              <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
              <div class="form-floating mb-3">
                <input
                  type="email"
                  class="form-control"
                  id="email"
                  name="email"
                  placeholder="name@example.com"
                  required
                />
                <label for="email">Email address</label>
              </div>
              <div class="form-floating mb-3">
                <input
                  type="password"
                  class="form-control"
                  id="password"
                  name="password"
                  placeholder="Password"
                  required
                />
                <label for="password">Password</label>
              </div>
              <button class="w-100 btn btn-lg btn-primary" type="submit">
                Login
              </button>
              <hr class="my-4" />
              <div class="d-grid gap-2 col-med-6 col-lg-6 mx-auto">
                <a href="/reset" class="btn btn-success" role="button"
                  >Reset Password</a
                >
                <a href="/createAccount" class="btn btn-success" role="button"
                  >Create new account</a
                >
                <a href="/verifyEmail" class="btn btn-success" role="button"
                  >Verify email</a
                >
              </div>
            </form>
          </div>
        </div>
      </div>
    </main>

    <%- include('includes/footer.ejs') %>

    <script src="/bootstrap/js/bootstrap.bundle.js"></script>
    <%- include('includes/end.ejs') %>